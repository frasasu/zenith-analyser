 # EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml,json,md}]
indent_size = 2

[*.py]
max_line_length = 88

[Makefile]
indent_style = tab

[Dockerfile]
indent_size = 4

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{html,css,scss}]
indent_size = 2

[*.txt]
trim_trailing_whitespace = false

[*.{diff,patch}]
trim_trailing_whitespace = false

[LICENSE]
trim_trailing_whitespace = false
insert_final_newline = false
